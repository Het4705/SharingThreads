<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Segregated Products</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 20px;
        }

        h1 {
            margin-bottom: 10px;
        }

        .product-container {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
        }

        .product-card {
            border: 1px solid #ccc;
            border-radius: 5px;
            padding: 20px;
            width: 300px;
        }

        .product-card img {
            max-width: 100%;
            height: auto;
        }
    </style>
</head>
<body>
    <h1>Pending Products</h1>
    <div class="product-container">
        <% segregatedProducts.pending.forEach(product => { %>
            <div class="product-card">
                <img src="<%= product.image_location %>" alt="<%= product.pname %>">
                <h2><%= product.pname %></h2>
                <p><strong>Price:</strong> <%= product.price %></p>
                <p><strong>Timestamp:</strong> <%= product.createdAt %></p>
                <p><strong>Size:</strong> <%= product.size %></p>
                <p><strong>Description:</strong> <%= product.details %></p>
                <p><strong>User ID:</strong> <%= product.UserID %></p>
            </div>
        <% }); %>
    </div>

    <h1>Completed Products</h1>
    <div class="product-container">
        <% segregatedProducts.completed.forEach(product => { %>
            <div class="product-card">
                <img src="<%= product.image_location %>" alt="<%= product.pname %>">
                <h2><%= product.pname %></h2>
                <p><strong>Price:</strong> <%= product.price %></p>
                <p><strong>Timestamp:</strong> <%= product.createdAt %></p>
                <p><strong>Size:</strong> <%= product.size %></p>
                <p><strong>Description:</strong> <%= product.details %></p>
                <p><strong>User ID:</strong> <%= product.UserID %></p>
            </div>
        <% }); %>
    </div>

    <h1>Rejected Products</h1>
    <div class="product-container">
        <% segregatedProducts.rejected.forEach(product => { %>
            <div class="product-card">
                <img src="<%= product.image_location %>" alt="<%= product.pname %>">
                <h2><%= product.pname %></h2>
                <p><strong>Price:</strong> <%= product.price %></p>
                <p><strong>Timestamp:</strong> <%= product.createdAt %></p>
                <p><strong>Size:</strong> <%= product.size %></p>
                <p><strong>Description:</strong> <%= product.details %></p>
                <p><strong>User ID:</strong> <%= product.UserID %></p>
            </div>
        <% }); %>
    </div>
</body>
</html>
